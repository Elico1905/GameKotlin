<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/ic_superior_01" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:rotationX="180"
            android:rotationY="180"
            android:scaleType="fitStart"
            android:src="@drawable/ic_superior_02" />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/puntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Puntos: 0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/intento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Intentos: 0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Errores: 0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <ProgressBar
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:progressDrawable="@drawable/custom_progressbar"
            android:rotation="180"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/game_comenzar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/azul_button"
                android:text="comenzar"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:foreground="@drawable/effect_ripple"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/viewAll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_eye"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="@drawable/effect_ripple"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c1"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c2"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c3"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c4"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c5"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c6"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c7"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c8"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c9"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c10"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c11"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c12"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c13"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c14"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c15"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/c16"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/carta"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>